{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "config"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}