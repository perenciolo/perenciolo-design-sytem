{
  "plugins": [
    "stylelint-prettier"
  ],
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-config-prettier",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "indentation": 2,
    "statement-max-nesting-depth": [
      2,
      {
        "countAtRules": false
      }
    ]
  }
}